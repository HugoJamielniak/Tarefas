massa = float(input("Qual seu peso em quilograma?"))
altura = float(input("Qual sua altura em metros"))

imc = massa / (altura ** 2)

if imc < 18.5:
    print("Sua condicao é abaixo do peso, com imc igual a:", imc)
elif imc < 25:
    print("Sua condicao é peso normal, com imc igual a:", imc)
elif imc < 30:
    print("Sua condicao é acima do peso, com imc igual a:", imc)
else:
    print("Sua condicao é obeso, com imc igual a:", imc)
